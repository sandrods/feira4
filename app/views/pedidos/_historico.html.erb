<br/>

<div class="col-md-8">

  <div class="row">
    <button type="button" id="btn_registrar_historico_pedido" class="btn btn-primary btn-sm pull-right show_historico_pedido" >Registrar Hist√≥rico</button>
  </div>

  <div class="row">
    <div class="well" id="form_incluir_historico_pedido" style="display: none;">
      <%= render :partial => "historicos/form" %>
    </div>

    <ul id="ul_historicos_pedido" class="list-group">
      <%= render :partial => "historicos/historico", :collection => @pedido.historicos, :as => :historico %>
    </ul>
  </div>

</div>

<div class="col-md-4">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Filtros</h3>
    </div>
    <div id="form_historico_pedido" class="panel-body">
      <%= simple_form_for :q, url: pedido_historicos_path(@pedido), remote: true, method: 'GET' do |f| %>
        <%= f.input :fornecedor_id_eq,
                    label: "Fornecedor",
                    collection: Fornecedor.order("nome_fantasia"),
                    label_method: :nome_fantasia,
                    required: false,
                    input_html: {:class => 'span3 select2_with_clear', 'data-placeholder' => 'Selecione'} %>
        <%= f.submit 'Filtrar', class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>
</div>
