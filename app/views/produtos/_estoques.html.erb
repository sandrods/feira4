<div class="panel panel-info">
  <div class="panel-heading">
    <b>Movimentações</b>
  </div>

  <table class="table">
    <tbody>
      <% @produto.movimentacoes.each do |ie| %>
      <tr>
        <td> <%= ie.movimento.data %> </td>
        <td> <%= movimento_descr(ie) %> </td>
        <td> <%= ie.item.tamanho.nome %> </td>
        <td> <%= ie.item.cor.nome %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <div class="panel-footer text-right">

  </div>
</div>
