<%= page_header "Exibir Linha" do %>
  <%= link_to icon(:chevron_left, "Voltar"), linhas_path, class: 'btn' %>
  <%= link_to icon(:edit, 'Editar Linha'), edit_linha_path(@linha), class: 'btn btn-primary' %>
<% end %>

<div class="panel panel-default">
  <div class="panel-body">

    <h4 class="text-primary">
      <%= @linha.descricao %>
    </h4>

    <div class="row">

      <div class="col-md-4 col-sm-6">

        <dl class="dl-horizontal form">

          <dt>Descrição</dt>
          <dd><%= @linha.descricao %></dd>

        </dl>

      </div>

    </div>

  </div>
</div>