<%= page_header "Linhas" %>

<div class="row">

  <div class="col-md-8">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Descricao</th>
        </tr>
      </thead>
      <tbody>
        <% @linhas.each do |linha| %>
          <tr>
            <td><%= link_to linha.descricao, edit_linha_path(linha) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <p class="index_count"><span><%= @linhas.count %></span> linhas encontradas.</p>

    <%= link_to(icon(:plus, 'Nova Linha'), new_linha_path, class: 'btn btn-primary') %>
  
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filtros</h3>
      </div>
      <div id="filtro_pedidos" class="panel-body">
        <%= simple_form_for @search, url: linhas_path, method: 'GET' do |f| %>
          <%= f.input :descricao_cont, label: "Descrição" %>

          <%= f.submit 'Filtrar', class: 'btn btn-info' %>
          <%= button_tag 'Limpar', class: 'btn btn-default clear' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

