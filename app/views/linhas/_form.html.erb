<%= simple_form_for(@linha) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :descricao, label: 'Descricao' %>

    </div>
  </div>

  <div class="bottom-actions">
    <%= f.button :submit, 'Salvar Linha', class: 'btn btn-primary' %>

    <%= link_to icon(:trash, 'Apagar esta Linha'),
          @linha,
          method: :delete,
          data: { confirm: 'Tem certeza?' },
          class: 'btn btn-sm text-danger pull-right' unless @linha.new_record? %>
  </div>

<% end %>
