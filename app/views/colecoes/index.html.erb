<%= page_header "Coleções" %>

<div class="row">

  <div class="col-md-8">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Descrição</th>
        </tr>
      </thead>
      <tbody>
        <% @colecoes.each do |colecao| %>
          <tr>
            <td><%= link_to colecao.descricao, colecao_path(colecao) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p class="index_count"><span><%= @colecoes.count %></span> coleções encontradas.</p>

    <%= link_to(icon(:plus, 'Nova Coleção'), new_colecao_path, class: 'btn btn-primary') %>

  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filtros</h3>
      </div>
      <div id="filtro_pedidos" class="panel-body">
        <%= simple_form_for @search, url: colecoes_path, method: 'GET' do |f| %>
          <%= f.input :descricao_cont, label: "Descrição" %>

          <%= f.submit 'Filtrar', class: 'btn btn-info' %>
          <%= button_tag 'Limpar', class: 'btn btn-default clear' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
