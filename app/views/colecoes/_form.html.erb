<%= simple_form_for(@colecao) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :descricao, label: 'Descrição' %>

    </div>
  </div>

  <%= f.button :submit, 'Salvar Coleção', class: 'btn btn-primary' %>

  <%= link_to icon(:trash, 'Apagar esta Coleção'), 
        @colecao, 
        method: :delete, 
        data: { confirm: 'Tem certeza?' }, 
        class: 'btn btn-sm text-danger pull-right' unless @colecao.new_record? %>

<% end %>
