<%= page_header "Etiquetas" do %>
  <%= link_to icon(:unchecked, 'Limpar Página'), unselect_all_etiquetas_path, method: 'POST', class: 'btn btn-warning' %>
  <%= link_to icon(:check, 'Preencher Página'), select_page_etiquetas_path, method: 'POST', class: 'btn btn-success' %>
  <span class="btn"></span>
  <%= link_to icon(:barcode, ' Gerar Etiquetas'), print_etiquetas_path(q: params[:q]), method: 'POST', class: 'btn btn-danger' %>
<% end %>

<div class="row">

  <div class="col-md-7">

    <table class="table" id="grid">
      <thead>
        <tr>
          <th><%= nbsp %></th>
          <th><%= nbsp %></th>
          <th><%= nbsp %></th>
          <th><%= nbsp %></th>
          <th><%= nbsp %></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: 'grid' %>
      </tbody>
    </table>

  </div>

  <div class="col-md-5">

    <div class="well well-sm">
    <%= simple_form_for @search, url: etiquetas_path, method: 'GET' do |f| %>

      <div class="row">
        <div class="col-lg-5">
          <%= f.input :produto_colecao_id_eq, label: 'Coleção', collection: Colecao.to_select %>
        </div>
        <div class="col-lg-7">
          <%= f.input :produto_fornecedor_id_eq, label: 'Fornecedor', collection: Fornecedor.to_select %>
        </div>
      </div>

      <%= f.submit 'Filtrar', class: 'btn btn-xs btn-info' %>

    <% end %>
    </div>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Ref</th>
      <th>Barcode</th>
      <th>Fornecedor</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>

    </tr>
  </thead>
  <tbody>
    <% @etiquetas.nao_selecionadas.each do |etiqueta| %>
      <tr id="tr_<%= etiqueta.id %>">
        <td><%= etiqueta.ref %></td>
        <td><%= etiqueta.barcode %></td>
        <td><small><%= etiqueta.fornecedor.try :nome %></small></td>
        <td><%= link_mark(etiqueta) %></td>
        <td><span class="btn btn-xs text-info"><%= icon(:ok) if etiqueta.gerada %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p class="index_count"><span><%= @etiquetas.count %></span> etiquetas encontradas.</p>

  </div>
</div>
