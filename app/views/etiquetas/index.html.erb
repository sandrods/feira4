<%= page_header "Etiquetas" do %>
  <%= link_to icon(:barcode, ' Gerar Etiquetas'), print_etiquetas_path, method: 'POST', class: 'btn btn-success btn-md' %>
<% end %>

<div class="row">

  <div class="col-md-8">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Ref</th>
          <th>Fornecedor</th>
          <th>Coleção</th>
        </tr>
      </thead>
      <tbody>
        <% @etiquetas.each_with_index do |etiqueta, i| %>
          <tr <%= ((i+1) % 25) == 0 ? 'class=page' : '' %>>
            <td><%= etiqueta.ref %></td>
            <td><%= etiqueta.fornecedor.try :nome %></td>
            <td><small><%= etiqueta.colecao.try :descricao %></small></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p class="index_count"><span><%= @etiquetas.count %></span> etiquetas encontradas.</p>

  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filtros</h3>
      </div>
      <div id="filtro_pedidos" class="panel-body">
        <%= simple_form_for @search, url: etiquetas_path, method: 'GET' do |f| %>

          <%= f.input :produto_colecao_id_eq, label: 'Coleção', collection: Colecao.to_select %>
          <%= f.input :produto_fornecedor_id_eq, label: 'Fornecedor', collection: Fornecedor.to_select %>

          <%= f.submit 'Filtrar', class: 'btn btn-info' %>
          <%= button_tag 'Limpar', class: 'btn btn-default clear' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
