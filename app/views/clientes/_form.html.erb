<%= simple_form_for(@cliente) do |f| %>

  <div class="row">
    <div class="col-sm-5 col-md-6">
      <%= f.input :nome, label: 'Nome', input_html: { class: 'input-lg' } %>
    </div>
    <div class="col-sm-5 col-md-4">
      <%= input_group(f, :email, label: 'email', icon: :envelope) %>
    </div>
    <div class="col-sm-2 col-md-2">
      <%= f.input :aniversario, label: "AniversÃ¡rio", placeholder: 'dd/mm' %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4">
      <%= input_group(f, :fone_cel, label: 'Celular', icon: :phone) %>
    </div>
    <div class="col-sm-4">
      <%= input_group(f, :fone_res, label: 'Fone Residencial', icon: :phone_alt) %>
    </div>
    <div class="col-sm-4">
      <%= input_group(f, :fone_com, label: 'Fone Comercial', icon: :phone_alt) %>
    </div>
    <div class="col-sm-6">
      <%= f.input :endereco, label: 'Endereco' %>
    </div>
    <div class="col-sm-4">
      <%= f.input :bairro, label: 'Bairro' %>
    </div>
    <div class="col-sm-2">
      <%= f.input :cep, label: 'CEP' %>
    </div>
    <div class="col-sm-4">
      <%= f.input :cidade, label: 'Cidade' %>
    </div>
    <div class="col-sm-2">
      <%= f.input :uf, label: 'UF' %>
    </div>
  </div>

  <div class="row">

    <div class="col-sm-12">
      <%= f.input :obs, label: 'Obs' %>
    </div>

  </div>

  <div class="bottom-actions">
    <%= f.button :submit, 'Salvar Cliente', class: 'btn btn-primary' %>

    <% unless @cliente.new_record?  %>

      <% if @cliente.arquivado? %>
        <%= link_to icon(:folder_close, 'Desarquivar este Cliente'),
            arquivar_cliente_path(@cliente, desarquivar: true),
            method: :post,
            data: { confirm: 'Tem certeza?' },
            class: 'btn btn-sm text-success pull-right' %>
      <% else %>
        <%= link_to icon(:folder_open, ' Arquivar este Cliente'),
            arquivar_cliente_path(@cliente),
            method: :post,
            data: { confirm: 'Tem certeza?' },
            class: 'btn btn-sm text-info pull-right' %>
      <% end %>

      <%= link_to icon(:trash, 'Apagar este Cliente'),
            @cliente,
            method: :delete,
            data: { confirm: 'Tem certeza?' },
            class: 'btn btn-sm text-danger pull-right' %>

    <% end %>
  </div>

<% end %>
