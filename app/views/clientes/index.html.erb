<%= page_header "Clientes" %>

<div class="text-center" data-spy="affix" data-offset-top="70"><%= links_letras %></div>

<div class="row">

  <div class="col-md-8">

    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>email</th>
          <th>Fone</th>
          <th>Aniver</th>
        </tr>
      </thead>
      <tbody>
        <% @clientes.each do |cliente| %>
          <tr>
            <td><%= link_to cliente.nome, edit_cliente_path(cliente) %></td>
            <td><small><%= cliente.email %></small></td>
            <td><%= cliente.fone %></td>
            <td><%= cliente.aniversario %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <p class="index_count"><span><%= @clientes.count %></span> clientes encontradas.</p>

    <%= link_to(icon(:plus, 'Novo Cliente'), new_cliente_path, class: 'btn btn-primary') %>
  
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filtros</h3>
      </div>
      <div id="filtro_pedidos" class="panel-body">
        <%= simple_form_for @search, url: clientes_path, method: 'GET' do |f| %>
          <%= f.input :nome_cont, label: "Nome" %>

          <%= f.submit 'Filtrar', class: 'btn btn-info' %>
          <%= button_tag 'Limpar', class: 'btn btn-default clear' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

