<%= page_header "Ajustes" %>

<div class="row">

  <div class="col-md-8">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Tipo</th>
        </tr>
      </thead>
      <tbody>
        <% @ajustes.each do |ajuste| %>
          <tr>
            <td><%= link_to ajuste.tipo, edit_ajuste_path(ajuste) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p class="index_count"><span><%= @ajustes.count %></span> ajustes encontradas.</p>

  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filtros</h3>
      </div>
      <div id="filtro_ajustes" class="panel-body">
        <%= simple_form_for @search, url: ajustes_path, method: 'GET' do |f| %>
          <%= f.input :tipo_cont, label: "Tipo" %>

          <%= f.submit 'Filtrar', class: 'btn btn-info' %>
          <%= button_tag 'Limpar', class: 'btn btn-default clear' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="bottom-actions">
  <%= link_to(icon(:plus, 'Incluir Ajuste'), new_ajuste_path, class: 'btn btn-primary') %>
</div>
