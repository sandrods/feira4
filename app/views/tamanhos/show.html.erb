<%= page_header "Exibir Tamanho" do %>
  <%= link_to icon(:chevron_left, "Voltar"), tamanhos_path, class: 'btn' %>
  <%= link_to icon(:edit, 'Editar Tamanho'), edit_tamanho_path(@tamanho), class: 'btn btn-primary' %>
<% end %>

<div class="panel panel-default">
  <div class="panel-body">

    <h4 class="text-primary">
      <%= @tamanho.nome %>
    </h4>

    <div class="row">

      <div class="col-md-4 col-sm-6">

        <dl class="dl-horizontal form">

          <dt>Nome</dt>
          <dd><%= @tamanho.nome %></dd>

        </dl>

      </div>

    </div>

  </div>
</div>