<%= simple_form_for(@tamanho) do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.input :nome, label: 'Nome' %>

    </div>
  </div>

  <%= f.button :submit, 'Salvar Tamanho', class: 'btn btn-primary' %>

  <%= link_to icon(:trash, 'Apagar este Tamanho'), 
        @tamanho, 
        method: :delete, 
        data: { confirm: 'Tem certeza?' }, 
        class: 'btn btn-sm text-danger pull-right' unless @tamanho.new_record? %>

<% end %>
