<%= simple_form_for(@venda) do |f| %>

  <div class="row">
    <div class="col-sm-2">
      <%= f.input :data %>
    </div>
    <div class="col-sm-6">
      <%= f.association :cliente, label: 'Cliente', collection: Cliente.all, label_method: :nome %>
    </div>
    <div class="col-sm-3 col-md-2">
      <%= input_group(f, :desconto, content: "%", position: 'after', as: :string)%>
    </div>
  </div>

  <div class="bottom-actions">
    <%= f.button :submit, 'Salvar Venda', class: 'btn btn-primary' %>

    <%= link_to icon(:trash, 'Apagar esta Venda'),
          @venda,
          method: :delete,
          data: { confirm: 'Tem certeza?' },
          class: 'btn btn-sm text-danger pull-right' unless @venda.new_record? %>
  </div>

<% end %>
