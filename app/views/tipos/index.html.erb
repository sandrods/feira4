<%= page_header "Tipos" %>

<div class="row">

  <div class="col-md-8">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Nome</th>
        </tr>
      </thead>
      <tbody>
        <% @tipos.each do |tipo| %>
          <tr>
            <td><%= link_to tipo.descricao, edit_tipo_path(tipo) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
    <p class="index_count"><span><%= @tipos.count %></span> tipos encontrados.</p>

    <%= link_to(icon(:plus, 'Novo Tipo'), new_tipo_path, class: 'btn btn-primary') %>
  
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filtros</h3>
      </div>
      <div id="filtro_pedidos" class="panel-body">
        <%= simple_form_for @search, url: tipos_path, method: 'GET' do |f| %>
          <%= f.input :descricao_cont,
                      label: "Descrição" %>

          <%= f.submit 'Filtrar', class: 'btn btn-info' %>
          <%= button_tag 'Limpar', class: 'btn btn-default clear' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

