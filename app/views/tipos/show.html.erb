<%= page_header "Exibir Tipo" do %>
  <%= link_to icon(:chevron_left, "Voltar"), tipos_path, class: 'btn' %>
  <%= link_to icon(:edit, 'Editar Tipo'), edit_tipo_path(@tipo), class: 'btn btn-primary' %>
<% end %>

<div class="panel panel-default">
  <div class="panel-body">

    <h4 class="text-primary">
      <%= @tipo.descricao %>
    </h4>

    <div class="row">

      <div class="col-md-4 col-sm-6">

        <dl class="dl-horizontal form">

          <dt>Descrição</dt>
          <dd><%= @tipo.descricao %></dd>

        </dl>

      </div>

    </div>

  </div>
</div>