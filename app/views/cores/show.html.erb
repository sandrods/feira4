<%= page_header "Exibir Cor" do %>
  <%= link_to icon(:chevron_left, "Voltar"), cores_path, class: 'btn' %>
  <%= link_to icon(:edit, 'Editar Cor'), edit_cor_path(@cor), class: 'btn btn-primary' %>
<% end %>

<div class="panel panel-default">
  <div class="panel-body">

    <h4 class="text-primary">
      <%= @cor.nome %>
    </h4>

    <div class="row">

      <div class="col-md-4 col-sm-6">

        <dl class="dl-horizontal form">

          <dt>Nome</dt>
          <dd><%= @cor.nome %></dd>

        </dl>

      </div>

    </div>

  </div>
</div>