$("#itens_sacola_dev_table").prepend("<%= j render partial: 'itens_sacola/item_devolvido', object: @item %>");
$("#itens_sacola_<%= @item.id %>").fadeOut();

$("#sacola_itens_count").html("<%= @sacola.itens.incluidos.count %>");
$("#sacola_itens_total").html("<%= number_to_currency @sacola.total %>");
$(".bar-code-input").val('');

$("#sound")[0].play();

$("#modal_ref").html('<%= @item.produto.ref %>')
$("#modal_cor").html('<%= @item.cor.try :nome %>')
$("#modal_tam").html('<%= @item.tamanho.try :nome %>')

$("#item_modal").modal();

setTimeout(function() {
  $("#item_modal").modal('hide');
  $(".bar-code-input").focus();
}, 3000);

