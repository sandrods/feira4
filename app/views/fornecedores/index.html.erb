<%= page_header "Fornecedores" do %>
  <%= link_to(icon(:plus, 'Novo Fornecedor'), new_fornecedor_path, class: 'btn btn-sm btn-success') %>
<% end %>

<div class="row">

  <div class="col-md-8">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Nome</th>
        </tr>
      </thead>
      <tbody>
        <% @fornecedores.each do |fornecedor| %>
          <tr>
            <td><%= link_to fornecedor.nome, edit_fornecedor_path(fornecedor) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <p class="index_count"><span><%= @fornecedores.count %></span> fornecedores encontradas.</p>

  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filtros</h3>
      </div>
      <div id="filtro_pedidos" class="panel-body">
        <%= simple_form_for @search, url: fornecedores_path, method: 'GET' do |f| %>
          <%= f.input :nome_cont, label: "Nome" %>
          <%= f.input :arquivado_eq, label: "Exibir Arquivados", as: :boolean %>

          <%= f.submit 'Filtrar', class: 'btn btn-info' %>
          <%= button_tag 'Limpar', class: 'btn btn-default clear' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
